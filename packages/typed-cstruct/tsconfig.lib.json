{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": true,
		"isolatedDeclarations": true,
		"strict": true,
		"outDir": "./dist",
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts"]
}
